<resources>

    <style name="Ribbit" parent="android:Theme.Holo.Light">
        <item name="android:editTextBackground">@drawable/ribbit_edit_text_holo_light</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/background</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:contentDescription">@string/background_image_description</item>
    </style>

    <style name="AuthTitle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthSubtitle" parent="AuthTitle">
        <item name="android:text">@string/subtitle</item>
        <item name="android:layout_below">@id/textViewTitle</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/textViewSubtitle</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_layout_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_layout_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_layout_horizontal</item>
        <item name="android:padding">@dimen/padding_layout_credentials</item>
    </style>
    
    <style name="AuthEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="AuthButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/layoutCredentials</item>
        <item name="android:layout_marginLeft">@dimen/margin_layout_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_layout_horizontal</item>
        <item name="android:background">@drawable/custom_buttom</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>
